<h1>Form 2: Form with array</h1>

<form action="/example/show_params">
	<div>
		Title <input type="text" name="title" />
	</div>
	
	<div>
		Body<br/>
		<textarea name="body" cols="50" rows="10"/></textarea>
	</div>
	
	<div>
		<input type="checkbox" name="publish" value="true" checked="checked"/> publish
	</div>
	
	<div>
	  Category 
		<select name="category">
		  <option value="1">Ruby</option>
		  <option value="2">Rails</option>
		  <option value="3">Birds</option>
	  </select>
	</div>
	
	<div>
		<h3>Tags</h3>
		<input type="checkbox" name="tags[]" value="foo" /> foo<br/>
		<input type="checkbox" name="tags[]" value="bar" /> bar<br/>
		<input type="checkbox" name="tags[]" value="baz" /> baz<br/>
	</div>
	
	<input type="submit" value="Show!" />
</form>